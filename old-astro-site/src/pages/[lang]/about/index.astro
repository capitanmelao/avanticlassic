---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import type { Language } from '../../../types';
import { distributors, translate } from '../../../utils/data';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'de' } },
  ];
}

const { lang } = Astro.params as { lang: Language };

const t = (key: string) => translate(lang, key);

// Get the main description from translations
const homeDescription = translate(lang, 'home.description');
---

<BaseLayout 
  lang={lang} 
  selectedMenu="about" 
  title="About - Avanticlassic"
  description="Avanticlassic and Avantijazz - Classical music and jazz labels supporting artists with quality recordings and career development."
>
  <div class="container mx-auto px-4">
    <h1 class="text-4xl font-bold mb-8 text-center">About Avanticlassic</h1>
    
    <!-- Main Description -->
    <div class="max-w-4xl mx-auto mb-12">
      <div 
        class="prose prose-lg max-w-none text-gray-700 leading-relaxed text-center"
        set:html={homeDescription}
      />
    </div>

    <!-- Mission Statement -->
    <div class="bg-gray-50 rounded-lg p-8 mb-12">
      <h2 class="text-3xl font-bold mb-6 text-center">Our Mission</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Quality Recordings</h3>
          <p class="text-gray-600">Using the best available technology and recording techniques to create exceptional musical experiences.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Artist Support</h3>
          <p class="text-gray-600">Offering real support in all facets of artists' careers, not just recording and promotion.</p>
        </div>
        
        <div class="text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Global Reach</h3>
          <p class="text-gray-600">Working with distributors and streaming services worldwide to ensure maximum visibility for our artists.</p>
        </div>
      </div>
    </div>

    <!-- Distributors Section -->
    {distributors.length > 0 && (
      <section class="mb-12">
        <h2 class="text-3xl font-bold mb-8 text-center">Our Distribution Partners</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {distributors.map((distributor) => (
            <a 
              href={distributor.url}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow text-center group"
            >
              <h3 class="font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                {distributor.name}
              </h3>
            </a>
          ))}
        </div>
      </section>
    )}

    <!-- Technical Specifications -->
    <div class="bg-blue-50 rounded-lg p-8 mb-12">
      <h2 class="text-3xl font-bold mb-6 text-center">Technical Excellence</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-xl font-semibold mb-4">Recording Quality</h3>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              CD/SACD hybrid music carriers
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              State-of-the-art recording studios
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              Professional recording techniques
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              High-quality production processes
            </li>
          </ul>
        </div>
        
        <div>
          <h3 class="text-xl font-semibold mb-4">Digital Distribution</h3>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              High-resolution streaming (96kHz/24bits)
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              Professional download formats
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              Contemporary packaging design
            </li>
            <li class="flex items-start">
              <span class="text-blue-600 mr-2">•</span>
              Specialist liner notes
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="text-center bg-gray-50 rounded-lg p-8">
      <h2 class="text-3xl font-bold mb-4">Get in Touch</h2>
      <p class="text-gray-700 mb-6">
        Interested in working with Avanticlassic? We'd love to hear from you.
      </p>
      <div class="flex justify-center space-x-6">
        <a 
          href="mailto:info@avanticlassic.com"
          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          Contact Us
        </a>
      </div>
    </div>
  </div>
</BaseLayout>