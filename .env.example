# Avanticlassic Main Website Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration (E-commerce)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Application Configuration
NEXT_PUBLIC_APP_URL=https://avanticlassic.vercel.app

# Optional: AI Translation Service
# OPENAI_API_KEY=your_openai_api_key_for_translations